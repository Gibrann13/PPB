<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <!-- Header -->
    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Konten -->
    <TextView
        android:id="@+id/textView_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo"/>

    <!-- Placeholder untuk gambar -->
    <ImageView
        android:id="@+id/imageView_account"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_account_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_akun"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Placeholder untuk gambar -->
    <ImageView
        android:id="@+id/imageView_transaction"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_transaction_placeholder"
        app:layout_constraintStart_toEndOf="@+id/imageView_account"
        app:layout_constraintTop_toTopOf="@+id/imageView_account"
        android:layout_marginStart="16dp"/>

    <!-- Placeholder untuk gambar -->
    <ImageView
        android:id="@+id/imageView_insight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_insight_placeholder"
        app:layout_constraintStart_toEndOf="@+id/imageView_account"
        app:layout_constraintTop_toBottomOf="@+id/imageView_transaction"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Tab -->
    <LinearLayout
        android:id="@+id/linearLayout_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2196F3"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView_tab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TAB 1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"/>

        <!-- Tambahkan TextView untuk tab lainnya sesuai kebutuhan -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
